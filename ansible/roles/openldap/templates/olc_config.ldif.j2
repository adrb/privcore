dn: olcDatabase={1}mdb,cn=config
changetype: modify
replace: olcSuffix
olcSuffix: {{ ldap_config.suffix }}
-
replace: olcRootDN
olcRootDN: cn=admin,{{ ldap_config.suffix }}
-
replace: olcRootPW
olcRootPW: {{ ldap_adminpw_hash }}
-
delete: olcAccess
-
add: olcAccess
olcAccess: to attrs=userPassword,shadowLastChange 
 by self write 
 by group/groupOfNames/member.exact="cn=admins,ou=groups,{{ ldap_config.suffix }}" write 
 by anonymous auth 
 by * none
-
add: olcAccess
olcAccess: to * 
 by group/groupOfNames/member.exact="cn=admins,ou=groups,{{ ldap_config.suffix }}" manage 
 by users read 
 by * none

